<%= form_with model: blog_post do |f| %>
  <% if f.object.errors.any? %>
    <div>
      <% for message in f.object.errors.full_messages %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <div>
    <%= f.label :published_at %>
    <%= f.datetime_select :published_at, include_blank: true %>
  </div>
  <p>
    <%= f.submit %>
  </p>
<% end %>